<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="加群方式："
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_chart_free"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="验证加入"
                android:gravity="center"
                android:textSize="16sp"/>

            <View
                android:layout_width="45dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/group_chart_verification"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="自由加入"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="机  器  人："
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fabu_kaijiang_huamian"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="发布开奖画面"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fabu_zoushi_tuji"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="发布走势图表"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/shishi_yilou_chaxun"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="实时遗漏查询"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/shishi_zhuanjia_chaxun"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="实时专家查询"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/shishi_kaijiang_chaxun"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:paddingLeft="5dp"
                android:text="实时开奖查询"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
