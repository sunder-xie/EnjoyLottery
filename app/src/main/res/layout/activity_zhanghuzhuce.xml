<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_hui"
    android:orientation="vertical">

    <include layout="@layout/top_quan" />

    <include layout="@layout/item_caizhan_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/background_white">

        <TextView
            android:id="@+id/denglu_shoujihao_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="手机号码："
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_shoujihao_edit_zhuce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入11位手机号"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:inputType="phone"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/denglu_quxiao_shoujihao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="×"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:background="@drawable/floatbuttonbefor"
            android:textColor="@color/background_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/background_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="验证码：    "
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_yanzhengma_edit_zhuce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:inputType="phone"
            android:gravity="center|left"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/black"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/background_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="彩店名称："
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_nicheng_edit_zhuce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入店名"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/denglu_quxiao_nicheng"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="×"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:background="@drawable/floatbuttonbefor"
            android:textColor="@color/background_white"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="我已阅读并同意《佰艺霖用户服务协议》"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/ziliao_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/xiayibuhui"
        android:clickable="true"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="@color/background_white"
        android:textSize="20sp" />
</LinearLayout>
