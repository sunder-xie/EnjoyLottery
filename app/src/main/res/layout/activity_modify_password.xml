<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_quan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/background_white">

        <TextView
            android:id="@+id/denglu_shoujihao_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="手机号码："
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_shoujihao_edit_zhuce_modify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入11位手机号"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:inputType="phone"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/denglu_quxiao_shoujihao"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="×"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:background="@drawable/floatbuttonbefor"
            android:textColor="@color/background_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/background_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="原密码：    "
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_yanzhengma_edit_zhuce_modify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入原密码"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:inputType="phone"
            android:gravity="center|left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/background_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="新密码        "
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_mima_edit_zhuce_modify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入6-15位"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/denglu_quxiao_mima"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="×"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:background="@drawable/floatbuttonbefor"
            android:textColor="@color/background_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/background_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="重复密码："
            android:gravity="center_vertical"
            android:paddingLeft="15dp"/>

        <EditText
            android:id="@+id/denglu_nicheng_edit_zhuce_modify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="请输入6 - 15位"
            android:textColorHint="@color/edithui"
            android:textSize="14sp"
            android:inputType="phone"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/denglu_quxiao_nicheng"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="×"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:background="@drawable/floatbuttonbefor"
            android:textColor="@color/background_white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sure_modify_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/background_hui"
        android:background="@color/edithui"
        android:clickable="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"/>
</LinearLayout>
