<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_hui">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群名称："
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/seletor_fangkuang"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群简介："
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/group_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:gravity="top|left"
            android:textSize="15sp"
            android:background="@drawable/seletor_fangkuang"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群地址："
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/group_chart_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seletor_fangkuang"
            android:paddingLeft="10dp"
            android:textColorHint="@color/edithui"
            android:hint="点击选择"
            android:gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群类型："
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/group_chart_ticai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seletor_fangkuang"
            android:text="体彩交流"
            android:gravity="center"
            android:textSize="12sp"/>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/group_chart_fucai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:text="福彩交流"
                android:gravity="center"
                android:textSize="12sp"/>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/group_chart_jingcai"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/seletor_fangkuang"
                android:text="竞彩交流"
                android:gravity="center"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群头像："
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/chakuang"/>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/xiangce_xiangji"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/ral_xiangce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/xiangce_xuanze"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/picture" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="图库" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <RelativeLayout
                android:id="@+id/ral_xiangji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/xiangji_xuanze"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="相机" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/province_city"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:elevation="2dp"
            android:background="@drawable/seletor_fangkuang"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sure_region"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/lvse"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp"
                android:text="确定"
                android:textColor="@color/background_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_white"
                android:orientation="horizontal">

                <widget.WheelView
                    android:id="@+id/id_province"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <widget.WheelView
                    android:id="@+id/id_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
